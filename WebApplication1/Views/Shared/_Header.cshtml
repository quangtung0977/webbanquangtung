@model IEnumerable<WebApplication1.Areas.Admin.Models.loaisanpham>

<header>
    <div class="wrap-main">
        <a class="logo my-header" title="Về trang chủ" href="/" aria-label="logo">
           LOGO
        </a>
        <form id="search-site" action="https://www.thegioididong.com/tim-kiem" method="get" autocomplete="off">
            <input class="topinput" id="search-keyword" name="key" type="text" aria-label="Bạn tìm gì..." placeholder="Bạn tìm gì..." autocomplete="off" onkeyup="SuggestSearch(event,this, 0);" maxlength="50" />
            <button class="btntop" type="submit" aria-label="tìm kiếm"><i class="icontgdd-topsearch"></i></button>
        </form>
        <nav>
            @foreach (var item in Model)
            {
                <a href="@Url.Action("Index", "Products", new { id=item.id })" class="mobile" title="@item.motasoluoc">
                    <div class="icontgdd-mobile custom_icon_loaisp" style="background:url(@item.hinhanhloaisanpham)"></div>@item.ten
                </a>
            }
            <a href="@Url.Action("Index", "News")" class="news" title="Tin công nghệ">
                <i class="icontgdd-news"></i><span>Tin</span>Công Nghệ
            </a>
            <a href="#" class="ask" title="Hỏi đáp">
                <i class="icontgdd-ask"></i>Hỏi đáp
            </a>
            <a href="#" class="cardsim">
                Sim số<br />
                Thẻ cào
            </a>
            <a href="#" class="utility">
                Đóng tiền điện,<br />
                nước, trả góp
            </a>
        </nav>
    </div>
    <div class="clr"></div>
</header>